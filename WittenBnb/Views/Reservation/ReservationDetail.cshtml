<!-- View a specific reservation as determined by database entry ID. -->

@model WittenBnb.Models.ReservationViewModel
@{
    ViewBag.Title = "Reservation Detail";
}
<h2>Reservation # @Model.Id</h2>
<div class="row">
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.FirstName)
        <br />@Html.DisplayFor(m => m.FirstName)
    </div>
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.LastName)
        <br />@Html.DisplayFor(m => m.LastName)
    </div>
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.Email)
        <br />@Html.DisplayFor(m => m.Email)
    </div>
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.Phone)
        <br />@Html.DisplayFor(m => m.Phone)
    </div>
    <div class="col-sm-12 form-group">
        @Html.LabelFor(m => m.Notes)
        <br />@Html.DisplayFor(m => m.Notes)
    </div>
    <div class="col-sm-12">
        @Html.ActionLink("Done", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>